
<div class="container">
  <div class="wrapper-white">
    <div class="row">
      <div class="col-xs-12 col-md-5 col-lg-4">
        <div class="pimage">
          <%= image_tag @product.photo.url(:product_show), class: "product-image" %>
        </div>
      </div>
      <div class="col-xs-6 col-md-2 col-lg-2">
        <div class="pimage1">
          <%= image_tag "http://unsplash.it/101/101", class: "product-image-small" %>
          <%= image_tag "http://unsplash.it/101/101", class: "product-image-small" %>
          <%= image_tag "http://unsplash.it/101/101", class: "product-image-small" %>
        </div>
      </div>
      <div class="col-xs-6 col-md-5 col-lg-6">
        <div class="positionText">
          <h2 class="flex-styling-small"><%= @product.name %></h2>
          <p class="flex-styling-small" ><%= @product.price %></p>
          <p><b>Description:</b></p>
          <p class="flex-styling-small"><%= @product.description %></p>
          <p class="flex-styling-small"><%= @product.url %></p>
          <div class="text-inline">
          <button type="button" class="btn btn-primary btn-lg">Buy Now</button>
            <button type="button" class="btn btn-primary btn-lg">Add to Wishlist</button>
          </div>
        </div>
      </div>
    </div>
  </div>


  <hr></hr>
  <div class="row">
    <div class="col-xs-12">
      <div class="productShow-wrapper">
      <h3><b><font size="6">Reviews:</font></b></h3>
        <div class="positionReview">
          <%= pluralize @product.reviews.size, "review" %>
          <div id="reviews">
            <% if @product.reviews.blank? %>
            Be the first to leave a review for <%= @product.name %>
            <% else %>
            <% @product.reviews.each do |review| %>
            <div id="reviews-box">
            <%= render 'reviews/show', review: review %>
            </div>
            <% end %>
            <% end %>
          </div>

          <%= render 'reviews/form', product: @product, review: @review %>
        </div>
      </div>
    </div>
  </div>
</div>



