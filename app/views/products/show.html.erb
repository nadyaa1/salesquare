<div class="container">
  <div class="wrapper-white">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="form-inputs salelogin">
          <div class="pimage">
            <%= image_tag "http://unsplash.it/500/500", class: "product-image" %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="positionText">
          <h1><%= @product.name %></h1>
          <p><%= @product.category %></p>
          <p><%= @product.description %></p>
        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-12">
      <div class="productShow-wrapper">
        <div class="positionReview">
          <%= pluralize @product.reviews.size, "review" %>
          <div id="reviews">
            <% if @product.reviews.blank? %>
            Be the first to leave a review for <%= @product.name %>
            <% else %>
            <% @product.reviews.each do |review| %>
            <%= render 'reviews/show', review: review %>
            <% end %>
            <% end %>
          </div>

          <%= render 'reviews/form', product: @product, review: @review %>
        </div>
      </div>
    </div>
  </div>
</div>

