          <div class="pimage">
           <%= cl_image_tag p.photo.url(:bright_face) %>
         </div>
         <div class="pname">
          <h3><%= p.name %></h3>
        </div>
        <hr/>

        <div class="pcategory">
          â‚¬ <%= p.price %>
        </div>
        <hr/>
        <div class="pcatlink">
