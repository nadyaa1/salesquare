<div class=" text-center">
  <h2><span>Find what you are looking for</span></h2>
  <p> A selection of the best products for the best prices</p>
</div>

<div class="products">
  <div class="featured-products">
    <div class="container">
      <div class="row">
        <% @products.each do |product| %>
        <ul class="product-card col-xs-12 col-sm-3 list-unstyled ">
          <%= image_tag product.photo.url(:bright_face) %>
          <h3> <%= product.name %> | <%= product.description %> </h3>
          <li>  <%= image_tag "http://unsplash.it/250/100" %></li>
          <li> â‚¬ <%= product.price %></li>
          <li><a class="card-btn"><%= product.url %></a></li>
          <li> <%= link_to "show product", product_path(product) %></li>
        </ul>
        <% end %>

<div class="container-fluid text-center ">
  <div class="row">
    <div class="products">
      <% @products.each do |p| %>
      <div class="col-xs-12 col-md-4 col-lg-3">
        <div class="products-wrapper">
          <div class="pimage">
            <%= image_tag "http://unsplash.it/300/200" %>
          </div>
          <div class="pname">
            <h3><%= p.name %></h3>
          </div>
          <hr/>
          <div class="pcatlink">
            <div class="pcategory">
              <%= p.category %>
            </div>
            <hr/>
            <br>
            <%= link_to "show product", product_path(p), class: "showproduct" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
