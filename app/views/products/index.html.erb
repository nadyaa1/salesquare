<!-- category bar -->
<div class="hidden-sm hidden-xs">
  <div class="container-categories">
    <div class="text-center">
      <li class="<%= category_filter_css_class("women") %>"><%= link_to "Women", products_path(category: "women") %></li>
      <li class="<%= category_filter_css_class("shoes") %>"><%= link_to "Shoes", products_path(category: "shoes") %></li>
      <li class="<%= category_filter_css_class("bags") %>"><%= link_to "Bags", products_path(category: "bags") %></li>
      <li class="<%= category_filter_css_class("men") %>"><%= link_to "Men", products_path(category: "men") %></li>
      <li class="<%= category_filter_css_class("kids") %>"><%= link_to "Kids", products_path(category: "kids") %></li>
      <li class="<%= category_filter_css_class("dresses") %>"><%= link_to "Dresses", products_path(category: "dresses") %></li>
      <li class="<%= category_filter_css_class("coats") %>"><%= link_to "Coats", products_path(category: "coats") %></li>
    </div>
  </div>
</div>
<!-- end category bar -->


<div class="container-fluid">
  <div class="row">
    <div class="hidden-sm col-md-2">
    </div>
    <div class="col-xs-12 col-md-8">
      <br>
      <div class="stripetrough text-center">
        <h2><span>Find what you are looking for</span></h2>
        <p> A selection of the best products for the best prices</p>
      </div>

      <div class="container-fluid text-center ">
        <div class="row">
          <div class="products">
            <% @products.each do |p| %>
            <div class="col-xs-12 col-md-3 paddingfix">
              <div class="products-wrapper">
                <div class="pimage">
                 <%= cl_image_tag p.photo.url(:bright_face) %>
               </div>
               <div class="pname">
                <h3><%= p.name %></h3>
              </div>


              <div class="pcategory">
                <%= humanized_money_with_symbol(p.price) %>
              </div>
              <hr/>
              <%= link_to product_path(p), class: "showproduct" do %>

              <div class="pcatlink">
                Show
              </div>
              <% end %>

            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="hidden-sm col-md-2">
  </div>
</div>
</div>


