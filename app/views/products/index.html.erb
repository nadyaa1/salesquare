<br>
<div class=" text-center">
  <h2><span>Find what you are looking for</span></h2>
  <p> A selection of the best products for the best prices</p>
</div>

<div class="container-fluid text-center ">
  <div class="row">
    <div class="products">
      <% @products.each do |p| %>
      <div class="col-xs-12 col-md-4 col-lg-3">
        <div class="products-wrapper">
          <div class="pimage">
            <%= image_tag "http://unsplash.it/300/200" %>
          </div>
          <div class="pname">
            <h3><%= p.name %></h3>
          </div>

          <div class="pcatlink">
          <div class="pcategory">
            <%= p.category %>
          </div>
          <hr/>
          <div class="pdescription">
            <%= p.description %>
          </div>
          <hr/>
          <br>
          <%= link_to "show product", product_path(p), class: "showproduct" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
