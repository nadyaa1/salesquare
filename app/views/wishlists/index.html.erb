<div class="text-center"><h1>Your Wishlists</h1>
  <p>Go to a product and click 'add to wishlist'</p>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <div class="wishlist-wrapper">

        <% @wishlists.each do |wishlist| %>
        <h3><%= wishlist.name %></h3> <i class="fa fa-times"></i> <i class="fa fa-pencil"></i>
          <%= link_to "Delete Wishlist", account_wishlist_path(wishlist), method: :delete, data: { confirm: 'Are you sure?'} %>

           <%= link_to "##{wishlist.id}modal", class: "btn btn-primary btn-lg", "data-toggle" => "modal" do %>
            <i class="fa fa-plus-circle" aria-hidden="true"></i> change name
            <% end %>
            <%= render partial: "changeWishlistName", locals: { wishlist: wishlist } %>


        <% wishlist.wishlist_products.each do |wishlist_product| %>
        <div class="wishlist-content">
          <p><%= wishlist_product.product.name %></p>
          <%= cl_image_tag wishlist_product.product.photo.url(:wishlist) %>
          <%= link_to "Delete", account_wishlist_product_path(wishlist_product), method: :delete, data: { confirm: 'Are you sure?'} %>
        </div>
        <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>
