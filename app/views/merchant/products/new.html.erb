 <div class="form-inputs salelogin"><h1>Add new Product</h1>

  <%= simple_form_for [:merchant, @product] do |f| %>

  <%= f.input :name, label: false, placeholder: "Title", input_html: {class: "finput"} %>

  <%= f.input :price, label: false, placeholder: "Price (â‚¬)", input_html: {class: "finput"} %>

