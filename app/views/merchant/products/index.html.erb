<div class="container-fluid text-center ">
  <div class="row">
    <div class="products">
      <% @products.each do |p| %>
      <div class="col-xs-12 col-md-4 col-lg-3">
        <div class="products-wrapper">
          <div class="pimage">
           <%= cl_image_tag p.photo.url(:bright_face) %>
         </div>
         <div class="pname">
          <h3><%= p.name %></h3>
          <p><%= p.url %></p>
        </div>
        <hr/>

        <div class="pcategory">
          â‚¬ <%= p.price %>
          <p><%= p.description %></p>
        </div>
        <hr/>
        <div class="pcatlink">
          <%= link_to "show product", product_path(p), class: "showproduct" %> |
          <%= link_to "Delete", ([:merchant,p]), method: :delete, class: "deleteproduct" %> |
          <%= link_to "Edit", edit_merchant_product_path(p), class: "editproduct" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
