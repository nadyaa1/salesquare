 <div class="form-inputs salelogin"><h1>Edit Product</h1>

  <%= simple_form_for [:merchant, @product] do |f| %>
  <div class="form-group">
    <%= f.text_field :name,  autofocus: true,
    class: "finput",
      placeholder: "Title" %>
    </div>
    <div class="form-group">
      <%= f.text_field :price, class: "finput", placeholder: "Price (â‚¬)" %>
