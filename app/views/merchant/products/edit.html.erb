<h1>Edit a product</h1>

<%= form_for [:merchant, @product] do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :price %>
<%= f.text_field :price %>
<%= f.label :category %>
<%= f.text_field :category %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :URL %>
<%= f.text_field :url %>

<%= f.submit %>
<% end %>
