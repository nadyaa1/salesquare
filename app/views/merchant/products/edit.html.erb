      <%= f.text_field :category, class: "finput", placeholder: "Category (men, women, etc..)" %>
    </div>
    <div class="form-group">
    <%= f.text_field :url, class: "finput", placeholder: "URL" %>
    </div>
    <div class="f-actions">
      <div class="form-actions">
        <%= f.submit class:"loginn" %>
      </div>
      <% end %>
