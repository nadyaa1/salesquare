<div class="col-xs-12 col-md-4 col-md-offset-4 form-wrapper">

  <!-- <div class="login-wrapper text-center"> -->
  <!-- <img src="http://unsplash.it/1001/251')" alt=""> -->
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs salelogin">

    <div class="form-group">
      <%= f.input :name, required: true,
      autofocus: true, label: false,
      placeholder: "Username",
      class: 'finput' %>

      <%= f.input :email,
      required: true, autofocus: true,
      label: false,
      placeholder: "Email" %>

      <%= f.input :password,
      required: true,
      label: false,
      placeholder: "Password" %>

      <%= f.input :password_confirmation,
      required: true,
      label: false,
      placeholder: "Confirm password" %>

      <div class="merchant">
        <%= f.input_field :merchant, as: :boolean,
        inline_label: "I am a merchant" %>
      </div>

      <div class="submit-button text-center">
        <%= f.button :submit, "Sign up" %>
      </div>

      <% end %>
    </div>

  </div>

  <div class=" already-registered text-center">
    <p>Already have an account? <%= render "devise/shared/links" %></p>
  </div>

</div>
